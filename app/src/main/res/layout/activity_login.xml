<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/splashback"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loginLottie"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/cookingman"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/loginTitle"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginTitle"
        android:text="Login"
        android:fontFamily="@font/baloo"
        android:textSize="45sp"
        android:textColor="#000"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/loginLottie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/email_pass_strokes"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/loginTitle"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/loginPassword"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColor="#000"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_baseline_mail_24"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="318dp" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="280dp"
        android:background="@drawable/email_pass_strokes"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/loginEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:hint="Password"
        android:textColor="@color/black"
        android:padding="10dp"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="428dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#000"
        android:layout_marginTop="80dp"
        android:textSize="18sp"
        app:backgroundTint="@color/yellow"
        android:backgroundTint="@color/yellow"
        android:background="@drawable/button_background"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="504dp"
        app:layout_constraintTop_toBottomOf="@+id/loginPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginNotRegText"
        android:textSize="15sp"
        android:text="Not registered yet?"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/loginButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/loginRegisterHereText"
        />

    <TextView
        android:id="@+id/loginRegisterHereText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register here"
        android:textColor="@color/yellow"
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/loginNotRegText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginButton"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>